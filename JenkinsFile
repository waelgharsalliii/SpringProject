                      steps {
                          script {
                            sh 'docker build -t waelgharsalli/devops_project:wael .'
                          }
                      }
                  }

                  stage('login dockerhub') {
                                        steps {
                                     // sh 'echo dckr_pat_-SnwrdC_ELsL6it2JT6cgIcAlrs | docker login -u azizbenhaha --password-stdin'
				sh 'docker login -u waelgharsalli --password dckr_pat_iA3hEtxDg8XpuFYMwgqwBjZgnwo'
                                            }
		  }

	                      stage('Push Docker Image') {
                                        steps {
                                   sh 'docker push waelgharsalli/devops_project:wael'
                                            }

		  }









}


